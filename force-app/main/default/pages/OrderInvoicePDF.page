<apex:page standardController="Order" extensions="OrderInvoicePDFController" renderAs="pdf" applyBodyTag="false" showHeader="false" sidebar="false">
    <head>
        <style media="print">
            @page {
                size: A4;
                margin: 1.5cm;
            }
            body {
                font-family: Arial, sans-serif;
                font-size: 11pt;
            }
            .header {
                margin-bottom: 20px;
            }
            .header h1 {
                font-size: 18pt;
                margin: 0;
            }
            .details {
                margin-top: 30px;
                border: 1px solid #ccc;
                padding: 10px;
                border-radius: 5px;
            }
            .details-table {
                width: 100%;
                border-collapse: collapse;
            }
            .details-table td {
                padding: 5px;
            }
            .products-table {
                width: 100%;
                margin-top: 25px;
                border-collapse: collapse;
                border: 1px solid #000;
                font-size: 9pt;
            }
            .products-table th, .products-table td {
                border: 1px solid #000;
                padding: 6px;
                text-align: left;
                font-size: 9pt;
            }
            .products-table th {
                background-color: #f2f2f2;
                font-weight: bold;
                font-size: 9pt;
            }
            .total-summary {
                text-align: right;
                margin-top: 20px;
                font-size: 10pt;
                font-weight: bold;
            }
            .signature-section {
                margin-top: 80px;
                width: 100%;
                page-break-inside: avoid;
            }
            .signature-box {
                width: 300px;
                height: 100px;
                border: 1px solid #ccc;
                margin-top: 5px;
                margin-left: auto;
            }
            .signature-image {
                max-width: 200px;
                max-height: 80px;
                margin-top: 10px;
            }
            .signature-label {
                font-size: 9pt;
                color: #555;
            }
            .invoice-number-section {
                background-color: #f0f0f0;
                padding: 10px;
                margin: 20px 0;
                border-left: 4px solid #666;
                font-size: 12pt;
                font-weight: bold;
            }
            .seller-buyer-section {
                margin: 15px 0;
            }
            .seller-buyer-table {
                width: 100%;
                border-collapse: collapse;
            }
            .seller-buyer-table td {
                width: 50%;
                vertical-align: top;
                padding: 10px;
                border: 1px solid #ddd;
            }
            .section-title {
                font-weight: bold;
                font-size: 10pt;
                margin-bottom: 5px;
                color: #333;
            }
            .company-info {
                line-height: 1.2;
                font-size: 9pt;
            }
        </style>
        <title></title>
    </head>
    <body>

        <div class="header">
            <table style="width: 100%; border-collapse: collapse;">
                <tr>
                    <td style="width: 50%; vertical-align: middle;">
                        <apex:image url="{!$Resource.CompanyLogo}" 
                                   alt="Company Logo"
                                   height="80px"/>
                    </td>
                    <td style="width: 50%; text-align: right; vertical-align: middle;">
                        <strong>Issue Date:</strong><br/>
                        <apex:outputText value="{0, date, MM/dd/yyyy HH:mm}">
                            <apex:param value="{!NOW()}" />
                        </apex:outputText>
                    </td>
                </tr>
            </table>
        </div>

        <div class="invoice-number-section">
            Invoice Number: 
            <apex:outputText value="INV-{!Order.OrderNumber}-{0, date, MM/yyyy}">
                <apex:param value="{!TODAY()}" />
            </apex:outputText>
        </div>

        <div class="seller-buyer-section">
            <table class="seller-buyer-table">
                <tr>
                    <td>
                        <div class="section-title">Seller:</div>
                        <div class="company-info">
                            <strong>Printerio</strong><br/>
                            123 Business Street<br/>
                            Business City, State 12345<br/>
                            Phone: (555) 123-4567<br/>
                            Email: info@yourcompany.com<br/>
                            Tax ID: 123-456-789<br/>
                            NIP: 123-456-78-90
                        </div>
                    </td>
                    <td>
                        <div class="section-title">Buyer:</div>
                        <div class="company-info">
                            <strong>{!Order.Account.Name}</strong><br/>
                            <apex:outputText value="{!Order.Account.BillingStreet}" rendered="{!NOT(ISBLANK(Order.Account.BillingStreet))}"/>
                            <apex:outputText value="Not Provided" rendered="{!ISBLANK(Order.Account.BillingStreet)}"/><br/>
                            <apex:outputText value="{!Order.Account.BillingCity}" rendered="{!NOT(ISBLANK(Order.Account.BillingCity))}"/>
                            <apex:outputText value="Not Provided" rendered="{!ISBLANK(Order.Account.BillingCity)}"/>
                            <apex:outputText value=", {!Order.Account.BillingState}" rendered="{!AND(NOT(ISBLANK(Order.Account.BillingCity)), NOT(ISBLANK(Order.Account.BillingState)))}"/>
                            <apex:outputText value=" {!Order.Account.BillingPostalCode}" rendered="{!AND(NOT(ISBLANK(Order.Account.BillingCity)), NOT(ISBLANK(Order.Account.BillingPostalCode)))}"/><br/>
                            <apex:outputText value="{!Order.Account.BillingCountry}" rendered="{!NOT(ISBLANK(Order.Account.BillingCountry))}"/>
                            <apex:outputText value="Not Provided" rendered="{!ISBLANK(Order.Account.BillingCountry)}"/>
                        </div>
                    </td>
                </tr>
            </table>
        </div>

        <h2 style="margin-top: 30px; font-size: 14pt;">Order Items</h2>
        <table class="products-table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th style="text-align: right;">Quantity</th>
                    <th style="text-align: right;">Unit Price (Net)</th>
                    <th style="text-align: right;">VAT Rate</th>
                    <th style="text-align: right;">Unit Price (Gross)</th>
                    <th style="text-align: right;">Total Net</th>
                    <th style="text-align: right;">Total Gross</th>
                </tr>
            </thead>
            <tbody>
                <apex:repeat value="{!Order.OrderItems}" var="item">
                    <tr>
                        <td>{!item.PricebookEntry.Product2.Name}</td>
                        <td style="text-align: right;"><apex:outputText value="{!item.Quantity}"/></td>
                        <td style="text-align: right;">
                            <apex:outputText value="{0, number, ###,###,##0.00}">
                                <apex:param value="{!item.UnitPrice}" />
                            </apex:outputText>
                        </td>
                        <td style="text-align: right;">23%</td>
                        <td style="text-align: right;">
                            <apex:outputText value="{0, number, ###,###,##0.00}">
                                <apex:param value="{!item.UnitPrice * 1.23}" />
                            </apex:outputText>
                        </td>
                        <td style="text-align: right;">
                            <apex:outputText value="{0, number, ###,###,##0.00}">
                                <apex:param value="{!item.TotalPrice}" />
                            </apex:outputText>
                        </td>
                        <td style="text-align: right;">
                            <apex:outputText value="{0, number, ###,###,##0.00}">
                                <apex:param value="{!item.TotalPrice * 1.23}" />
                            </apex:outputText>
                        </td>
                    </tr>
                </apex:repeat>
            </tbody>
        </table>

        <div class="total-summary">
            <div style="margin-bottom: 10px;">
                Total Net Amount: 
                <apex:outputText value="{0, number, ###,###,##0.00}">
                    <apex:param value="{!Order.TotalAmount}" />
                </apex:outputText>
            </div>
            <div style="margin-bottom: 10px;">
                VAT (23%): 
                <apex:outputText value="{0, number, ###,###,##0.00}">
                    <apex:param value="{!Order.TotalAmount * 0.23}" />
                </apex:outputText>
            </div>
            <div style="border-top: 2px solid #000; padding-top: 10px;">
                Total Gross Amount: 
                <apex:outputText value="{0, number, ###,###,##0.00}">
                    <apex:param value="{!Order.TotalAmount * 1.23}" />
                </apex:outputText>
            </div>
        </div>

        <div class="signature-section">
            <table style="width: 100%;">
                <tr>
                    <td style="widthe: 50%; vertical-align: top;">
                        <!-- Podpis firmy z obrazem -->
                        <div style="margin-bottom: 10px;">
                            <apex:outputText value="{0, date, MM/dd/yyyy}">
                                <apex:param value="{!TODAY()}" />
                            </apex:outputText>
                        </div>
                        <apex:image value="{!$Resource[companySignatureName]}" 
                                   styleClass="signature-image" 
                                   alt="Company Signature"
                                   height="100px"/>
                        <br/>
                        <span class="signature-label">(Company Representative's Signature)</span>
                    </td>
                    <td style="width: 50%; text-align: right; vertical-align: top;">
                        <!-- Podpis klienta - elektroniczny lub puste pole -->
                        <div style="margin-bottom: 10px;">
                            Date: 
                            <apex:outputText value="{0, date, MM/dd/yyyy}">
                                <apex:param value="{!TODAY()}" />
                            </apex:outputText>
                        </div>
                        
                        <apex:outputPanel rendered="{!signatureUrl!=null}">
                            <apex:image url="{!signatureUrl}"
                                       styleClass="signature-image" 
                                       alt="Customer Electronic Signature"
                                       style="width: 200px; border: 1px solid #ccc; padding: 5px;"/>
                            <br/>
                            <span class="signature-label">(Customer's Electronic Signature)</span>
                        </apex:outputPanel>
                        
                        <apex:outputPanel rendered="{!signatureUrl==null}">
                            <div class="signature-box">
                            </div>
                            <span class="signature-label">(Customer's Signature)</span>
                        </apex:outputPanel>
                    </td>
                </tr>
            </table>
        </div>

    </body>
</apex:page>